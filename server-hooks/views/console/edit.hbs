<h2>Console</h2>
<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update message</h4>
            <form method="post">
                <div class="form-group">
                    <label for="token">Token value</label>
                    <input type="text" class="form-control" id="token" value="{{console.token}}" name="token" placeholder="Token value">
                </div>
                <div class="form-group">
                    <label for="message">Console Message</label>
                    <textarea class="form-control console-message" name="message" id="message" rows="10" placeholder="Message displayed on the hacker console">{{console.message}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-danger" href="/console/delete/{{console.cid}}">Delete</a>
            </form>
        </div>
    </div>
</div>

