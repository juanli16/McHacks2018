<div class="card">
    <div class="card-body">
        <h2 class="card-title">Add API</h2>

        <form method="post">
            <div class="form-group">
                <label for="key">Unique key</label>
                <input type="text" name="key" class="form-control" id="key" value="{{g_post.key}}" placeholder="API key name">
            </div>
            <div class="form-group">
                <label for="name">API Name</label>
                <input type="text" name="name" class="form-control" id="name" value="{{g_post.name}}" placeholder="API Name">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" name="description" class="form-control" id="description" value="{{g_post.description}}" placeholder="API Description">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
